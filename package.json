{
  "name": "use-persisting-state-for-react-table",
  "version": "0.0.1",
  "type": "module",
  "description": "A helper hook to help persist the state of a Tanstack Table either into the URL or in local storage.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "vite",
    "dev:lib": "rollup -c -w",
    "test": "vitest run",
    "test:watch": "vitest  --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit",
    "lint": "eslint lib e2e --ext .ts,.tsx",
    "lint:fix": "eslint lib e2e --ext .ts,.tsx --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "keywords": [
    "react",
    "hook",
    "local",
    "storage",
    "typescript"
  ],
  "author": "lucasriondel",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasriondel/use-persisting-state-for-react-table.git"
  },
  "license": "MIT",
  "peerDependencies": {
    "@tanstack/react-table": "^8.21.3",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@tanstack/react-query": "^5.85.9",
    "@tanstack/react-table": "^8.21.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.34.0",
    "jsdom": "^26.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "typescript": "5.9.2",
    "vite": "^7.1.4",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@lucasriondel/use-local-storage-reacthook": "^0.0.1",
    "use-url-state-reacthook": "^0.0.2"
  }
}
